<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动名称:         "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_event_name"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/transparent"
            android:drawablePadding="25dip"
            android:hint="请输入活动名称"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColorHint="#ffdddddd" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动地点:        "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_event_place"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/transparent"
            android:drawablePadding="25dip"
            android:hint="请输入活动地点"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColorHint="#ffdddddd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动面向对象:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_event_person"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/transparent"
            android:drawablePadding="25dip"
            android:hint="请输入活动面向对象"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColorHint="#ffdddddd" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动时间:        "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_event_time"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/transparent"
            android:drawablePadding="25dip"
            android:hint="请输入活动时间"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColorHint="#ffdddddd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动详情:        "
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_event_desc"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/transparent"
            android:drawablePadding="25dip"
            android:hint="请输入活动详情"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColorHint="#ffdddddd"
            />
    </LinearLayout>

</LinearLayout>