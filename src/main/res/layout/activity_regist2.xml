<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.xsx.samer.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/male_default_icon"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp"
            >
            <LinearLayout
                android:id="@+id/ll_male"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/select_sex_male_btn_bg_selector"
                android:gravity="center_vertical"
                android:layout_margin="16dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/male"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_female"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/select_sex_female_btn_bg_selector"
                android:gravity="center_vertical"
                android:layout_margin="16dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/female"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="#fff"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

